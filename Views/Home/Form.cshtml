@{
    Layout = "_Layout";
}

<div class="home-header">
  <h1>Add a contact</h1>
</div>
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8 form-entry">
    <form action="/contact/new" method="post" class="form-inline">
      <label class="sr-only" for="inlineFormInput">Enter Name</label>
      <input class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Contact Name" type="text" name="name">
      <label class="sr-only" for="inlineFormInput">Enter Number</label>
      <input class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Contact Number" type="text" name="number">
      <label class="sr-only" for="inlineFormInput">Enter Address</label>
      <input class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Contact Address" type="text" name="address">
      <button type="submit" class="btn btn-info btn-lg" name="button">Submit!</button>
    </form>
  </div>
  <div class="col-md-2">
  </div>
</div>
