@{
    Layout = "_Layout";
}
<div class="home-header">
<h1>@Model.GetName()</h1>
</div>
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8 new-contact-result">

    <h3 class="list-new">Number: @Model.GetNumber()</h3>
    <h3 class="list-new">Address: @Model.GetAddress()</h3>

<form action="/" class="new-button">
  <button type="submit" class="btn btn-info btn-lg">View all contacts</button>
</form>
<form action="/contact/form">
  <button type="submit" class="btn btn-info btn-lg">Create New Contact</button>
</form>
</div>
<div class="col-md-2">
</div>
</div>
