@{
    Layout = "_Layout";
}

<div class="home-header">
<h1>You've created a new contact!</h1>
</div>
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8 new-contact-result">

    <h3 class="list-new">Name: <em>@Model.GetName()</em></h3>
    <h3 class="list-new">Number: <em>@Model.GetNumber()</em></h3>
    <h3 class="list-new">Address: <em>@Model.GetAddress()</em></h3>

<form action="/" class="new-button">
  <button type="submit" class="btn btn-info btn-lg">View all contacts</button>
</form>
</div>
<div class="col-md-2">
</div>
</div>
